{
	"manifest_version": 2,
	"name": "MMCS Helper",
	"version": "1.0",
	"description": "Downloads and opens media in MMCS",
	"developer": {
		"name": "mlfaw",
		"url": "https://github.com/mlfaw/mmcs"
	},
	
	"icons": {
		"48": "mmcs48.png"
	},

	"applications": {
		"gecko": {
			"id": "mmcshelper@mlfaw.com"
		}
	},

	"background": {
		"scripts": [
			"background.js"
		]
	},

	"browser_action": {
		"default_icon": "mmcs48.png"
	},

	"permissions": [
		"bookmarks",
		"contextMenus",
		"downloads",
		"downloads.open",
		"nativeMessaging",
		"notifications",
		"webRequest",
		"webRequestBlocking"
	],

	"options_ui": {
		"browser_style": true,
		"chrome_style": true,
		"page": "options.html"
	}
}